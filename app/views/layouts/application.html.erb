<!DOCTYPE html>
<html ng-app="app.golfApp">
<head>
  <title>BeinGolf</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header class="navbar navbar-static-top bs-docs-nav" id="top" role="banner">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="/users" class="navbar-brand"><i class="fa fa-rocket fa-2x"></i></a>
      </div>
      <nav class="collapse navbar-collapse bs-navbar-collapse">
        <% if current_user %>
        <ul class="nav navbar-nav">
          <li>
            <!-- news feed -->
            <a href="#">Home</a>
          </li>
          <li>
            <a href="/users">Find People</a>
          </li>
          <li>
            <a href="#">Find People Custom</a>
          </li>
          <li>
            <a href="#">Next Events</a>
          </li>
          <li>
            <a href="/users/<%=current_user.id%>">Your Profile</a>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/users/<%=current_user.id%>"><img class="profile_img"src="<%=current_user.picture_url%>"></a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Settings<span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="/users/<%=current_user.id%>/edit">Edit profile</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <li class="divider"></li>
              <li class="dropdown-header">Nav header</li>
              <li><a href="#">Separated link</a></li>
              <li><a href="signout">Logout</a></li>
            </ul>
          </li>
        </ul>
        <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#">About</a></li>
          <li><a href="#">Team</a></li>
          <% end  %>
        </ul>
      </nav>
    </div>
  </header>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
