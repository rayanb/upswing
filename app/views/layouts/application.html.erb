<!DOCTYPE html>
<html ng-app="app.golfApp">
<head>
  <title>BeinGolf</title>
  <meta name="viewport" content="width=device-width, initial-scale=0.9">
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body style="zoom:0.9">

  <header class="navbar navbar-static-top bs-docs-nav" id="top navigation" role="banner">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="/users" class="navbar-brand"><i class="fa fa-rocket fa-2x"></i></a>
      </div>
      <nav class="collapse navbar-collapse bs-navbar-collapse">
        <% if current_user %>
        <ul class="nav navbar-nav">
          <li>
            <!-- news feed -->
            <a href="#">Home</a>
          </li>
          <li>
            <a href="/users">Find People</a>
          </li>
          <li>
            <a href="/users/<%=current_user.id%>/friends">Friends</a>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/users/<%=current_user.id%>"><img class="profile_img"src="<%=current_user.picture_url%>"></a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Settings<span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="/users/<%=current_user.id%>/edit">Edit profile</a></li>
              <li><a href="/auth/signout">Logout</a></li>
            </ul>
          </li>
        </ul>
        <% else %>
        <ul class="nav navbar-nav navbar-right" id="">
          <li data-menuanchor="firstPage" class="active"><a href="#firstPage">About</a></li>
          <li data-menuanchor="secondPage"><a href="#secondPage">Sign In</a></li>
          <li data-menuanchor="3rdPage"><a href="#3rdPage">Team</a></li>
          <% end  %>
        </ul>
      </nav>
    </div>
  </header>

  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
